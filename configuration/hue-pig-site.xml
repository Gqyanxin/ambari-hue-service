<configuration supports_final="true">
  <!-- Settings to configure Pig -->
  <property>
    <name>local_sample_dir</name>
    <value>/usr/hdp/current/pig-client</value>
    <display-name>Local Sample Dir</display-name>
    <description>Location of piggybank.jar on local filesystem</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>remote_data_dir</name>
    <value>/user/hue/pig/examples</value>
    <display-name>Remote Data Dir</display-name>
    <description>Location piggybank.jar will be copied to in HDFS</description>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>

