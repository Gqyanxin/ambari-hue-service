<configuration supports_final="true">
  <!-- Settings to configure Notebook-->
  <property>
    <name>enable_batch_execute</name>
    <value>true</value>
    <display-name>enable Batch Execute</display-name>
    <description>Flag to enable the bulk submission of queries as a background task through Oozie</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>enable_query_builder</name>
    <value>true</value>
    <display-name>enable Query Builder</display-name>
    <description>Flag to enable the SQL query builder of the table assist</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>enable_query_scheduling</name>
    <value>true</value>
    <display-name>enable Query Scheduling</display-name>
    <description>Flag to enable the creation of a coordinator for the current SQL query</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>github_remote_url</name>
    <value>https://github.com</value>
    <display-name>Github Remote URL</display-name>
    <description>Base URL to Remote GitHub Server</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>github_api_url</name>
    <value>https://api.github.com</value>
    <display-name>Github API URL</display-name>
    <description>Base URL to GitHub API</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>github_client_id</name>
    <value/>
    <display-name>Github Client ID</display-name>
    <description>Client ID for Authorized GitHub Application</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>github_client_secret</name>
    <value/>
    <display-name>Github Client Secret</display-name>
    <description>Client Secret for Authorized GitHub Application</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>enable_dbproxy_server</name>
    <value>true</value>
    <display-name>enable DBproxy Server</display-name>
    <description>Main flag to override the automatic starting of the DBProxy server</description>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>

